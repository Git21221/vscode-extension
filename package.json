{
  "name": "output-formatter",
  "version": "1.2.2",
  "description": "Automatically add and update line numbers and file names to your output statements",
  "repository": "https://github.com/Git21221/vscode-extension",
  "publisher": "SaikatDas",
  "license": "commercial",
  "pricing": "Trial",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Debuggers",
    "Formatters"
  ],
  "keywords": [
    "output tracking",
    "formatter",
    "debugging",
    "vscode",
    "extension",
    "line numbers",
    "file names"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:cpp",
    "onLanguage:go",
    "onLanguage:ruby",
    "onLanguage:php",
    "onLanguage:rust",
    "onLanguage:swift",
    "onLanguage:lua",
    "onLanguage:perl",
    "onLanguage:dart",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:haskell",
    "onLanguage:elixir",
    "onLanguage:clojure",
    "onLanguage:groovy",
    "onLanguage:objective-c",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:json",
    "onLanguage:yaml",
    "onLanguage:xml",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:sass",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:markdown",
    "onLanguage:plaintext",
    "onLanguage:sql",
    "onLanguage:graphql",
    "onLanguage:vue",
    "onLanguage:angular",
    "onLanguage:react",
    "onLanguage:vue-html",
    "onLanguage:vue-script"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartOutputTracker.addTracking",
        "title": "Add Line Tracking to Output",
        "category": "Smart Output"
      },
      {
        "command": "smartOutputTracker.updateAllTracking",
        "title": "Update Line Tracking in Output",
        "category": "Smart Output"
      },
      {
        "command": "smartOutputTracker.removeTracking",
        "title": "Remove Line Tracking from Output",
        "category": "Smart Output"
      },
      {
        "command": "smartOutputTracker.toggleAutoUpdate",
        "title": "Toggle Auto-Update",
        "category": "Smart Output"
      },
      {
        "command": "smartOutputTracker.toggleTrackingMenu",
        "title": "Toggle Tracking Menu"
      }
    ],
    "keybindings": [
      {
        "command": "smartOutputTracker.addTracking",
        "key": "ctrl+alt+t",
        "when": "editorTextFocus",
        "mac": "cmd+alt+t"
      },
      {
        "command": "smartOutputTracker.updateAllTracking",
        "key": "ctrl+alt+u",
        "when": "editorTextFocus",
        "mac": "cmd+alt+u"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "smartOutputTracker.addTracking",
          "when": "editorTextFocus",
          "group": "smartOutput@1"
        },
        {
          "command": "smartOutputTracker.removeTracking",
          "when": "editorTextFocus",
          "group": "smartOutput@3"
        }
      ]
    },
    "configuration": {
      "title": "Smart Output Tracker",
      "properties": {
        "smartOutputTracker.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update line numbers and file names in output statements."
        },
        "smartOutputTracker.includeFileName": {
          "type": "boolean",
          "default": true,
          "description": "Include file names in output statements."
        },
        "smartOutputTracker.includeLineNumber": {
          "type": "boolean",
          "default": true,
          "description": "Include line numbers in output statements."
        },
        "smartOutputTracker.separator": {
          "type": "string",
          "default": " - ",
          "description": "Separator used between original message and tracking info in output statements."
        }
      }
    }
  },
  "icon": "debug-console-FACB55-128.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "author": "Saikat Das",
  "type": "commonjs",
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0",
    "mocha": "^10.2.0",
    "glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.1.0"
  }
}
